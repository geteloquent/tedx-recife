<%= form_for contact, remote: true, html: { class: 'contact-form clearfix', novalidate: browser.mobile? || browser.tablet? ? true : false } do |f| %>
  <ul>
    <% f.object.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>

  <fieldset>
    <div class="form-group">
      <%= f.label :name, "Nome" %>
      <%= f.text_field :name, required: true, class: 'input form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :email, "Email" %>
      <%= f.email_field :email, required: true,class: 'input form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :message, "Mensagem" %>
      <%= f.text_area :message, rows: 4, required: true, class: 'input form-control' %>
    </div>
  </fieldset>

  <fieldset class="buttons">
    <%= f.button "Enviar", class: 'btn-submit btn pull-right' %>
  </fieldset>
<% end %>
