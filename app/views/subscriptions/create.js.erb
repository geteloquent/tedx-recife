<% if @subscription.errors.empty? %>
  message = "<%= j render 'shared/success_message', message: flash[:success] %>";
  $('.subscription-form').replaceWith(message);
<% else %>
  form = "<%= j render 'form', subscription: @subscription %>";
  $('.subscription-form').replaceWith(form);
  $('.subscription-form .cpf-input').mask("999.999.999-99")
  $('.subscription-form .birthday-input').mask("99/99/9999")
<% end %>
